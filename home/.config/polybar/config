[module/wifi]
type = internal/network

interface = wlp3s0
interval = 1

label-connected = %{A} %{A:wicd-client &:} %essid%%{A} | %local_ip%
format-connected-foreground = ${colors.blue}

format-disconnected-padding = 1
format-disconnected-foreground = ${colors.yellow}

label-disconnected = %{A:wicd-client &:} Disconnected%{A}


[module/cpu]
type = internal/cpu
interval = 1

format-foreground = ${colors.yellow}

label =  %{A:termite -e vtop &:}%percentage%%


[module/temperature]
label-padding-left = 1
type = custom/script
exec = $HOME/.config/polybar/temperature.sh
interval = 1

format-foreground = ${colors.magenta}

label =  %output%°C


[module/ram]
label-padding-left = 1
type = internal/memory
interval = 3

format-foreground = ${colors.green}

label =  %{A:LANG=en_US.utf8 TERM=xterm-256color termite -e vtop &:}%percentage_used%%


[module/weather]
label-padding-left = 1
type = custom/script
exec = "sh $HOME/.config/polybar/weather.sh"
interval = 600
label-font = 3

format-foreground = ${colors.blue}

label = %output%

[module/xwindow]
label-padding-left = 1
type = internal/xwindow

label = %title%
label-maxlen = 70

format-foreground = ${colors.foreground}
format-prefix = " "
format-suffix = " "

format-margin = 5


[module/clock]
type = internal/date

interval = 1.0

time =  %H:%M

format = <label>
format-prefix = " "
format-foreground = ${colors.yellow}

label = %time%


[module/date]
type = internal/date

date =  %d/%m

format = <label>
format-prefix = " "
format-foreground = ${colors.magenta}

label = %date%


[module/volume]
type = internal/volume
